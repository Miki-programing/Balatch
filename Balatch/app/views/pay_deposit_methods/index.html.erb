<div class="row">
  <div class="col-md-6 mx-auto my-3">
    <h3>一覧</h3>
    <table class="table">
      <tbody>
        <% @methods.each do |method| %>
          <tr>
            <th><%= method.group_i18n %></th>
            <th><%= method.name %></th>
            <th>
              <%= link_to edit_pay_deposit_method_path(method) do %>
                <i class="fas fa-pen"></i>
              <% end %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-6 mx-auto my-3">
    <%= render "form", method: @method %>
  </div>
</div>
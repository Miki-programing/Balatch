<div class="row">
  <div class="col-md-6">
    <table class="table">
      <tbody>
        <% @methods.each do |method| %>
          <tr>
            <th><%= method.name %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-6 mx-auto">
    <%= form_with model: @method do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :group %>
        <%= f.select :group, [["現金","cash"], ["クレジット", "credit"], ["オンライン決済", "online"]], {}, {:class => "form-control"} %>
      </div>
      <div class="form-group text-right">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>